<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultText" parent="AppTheme">
        <item name="fontFamily">@font/primary_regular</item>
    </style>

    <style name="header" parent="DefaultText">
        <item name="fontFamily">@font/primary_bold</item>
    </style>

    <style name="h1" parent="header">
        <item name="android:textSize">24sp</item>

    </style>

    <style name="h2" parent="header">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="h3" parent="header">
        <item name="android:textSize">14sp</item>

    </style>

    <style name="h4" parent="header">
        <item name="android:textSize">12sp</item>

    </style>

</resources>